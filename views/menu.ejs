<nav class="menu">

	<% if (typeof user === 'undefined') { %>
			<% var user = false; %>
	<% } %>



	<% if (user) { %>
			<a href="/dictionaries"><button>Мои Термины</button></a>
			<a href="/user/profile"><button>Профиль</button></a>
			<a href="/auth/logout"><button>Выйти</button></a>
