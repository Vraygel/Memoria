        <a href="/admin"><button>Админ</button></a>
    <% } %>
		
	<% } else { %>
			<a href="/auth/login"><button>Вход</button></a>
			<a href="/auth/register"><button>Регистрация</button></a>
	<% } %>
</nav>





			
			
			
			